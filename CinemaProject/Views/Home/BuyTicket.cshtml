@model CinemaProject.ViewModels.BuyTicketViewModel

@{
    ViewBag.Title = "BuyTicket";
}

<h2>Order:</h2>

<div>
    <h4>Reservation Details</h4>
    <hr />
    @if (!string.IsNullOrEmpty(Model.Error))
    {
        <dl class="dl-horizontal">
            <dd>
                @Html.DisplayFor(model => model.Error)
            </dd>
        </dl>

    }
    else
    {
        using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <label for="Mname"><i class="fa fa-user"></i> Movie </label>
                <input type="text" id ="Mname" name="movieName" value="@Model.Movie.MovieName" readonly />
                <br />
                <br /> 
                <div class="form-group">
                    <div>  Choose a Seat</div>
                    <div class="col-md-10">
                        @Html.DropDownList("Seat", Model.Seats, htmlAttributes: new { @class = "form-control" })
                    </div>
                </div>
                <br />
                <br />
                <div class="form-group">
                    <div>Movie</div>
                    <div class="col-md-10">
                        @Html.DisplayFor(model => model.Movie.MoviePresentId)
                    </div>
                </div>
                <input type="hidden" name="movieId" value="@(Model.Movie.MoviePresentId)" />


                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Add To Cart" class="btn btn-default" />
                    </div>
                </div>
            </div>
        }
    }

</div>
<p>
    @Html.ActionLink("Back to Home", "Index")
</p>
