@model IEnumerable<CinemaProject.Models.MovieScreen>

@{
    ViewBag.Title = "Screenings";
}

<h2>Manage Screenings</h2>

<p>
    @Html.ActionLink("Create New", "AddMoviesToScreenings")
</p>
<table class="table">
    <tr>
        <th>
            Hall Id
        </th>
        <th>
            Movie Name
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>
        <th>
            <div>Seats left</div>
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Hall.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Movie.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                <div>Total: @item.Hall.Seats , Left:@(item.Hall.Seats- item.SeatsTaken.Count())</div>
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new {  id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
