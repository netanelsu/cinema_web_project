@model IEnumerable<CinemaProject.Models.Movie>



<h2>Welcome System Admin </h2>
<p>
    @Html.ActionLink("Add Movie", "AddMovie")<br />
    @Html.ActionLink("Manage Halls", "ManageHall")<br/>
    @Html.ActionLink("Manage screenings", "Screenings")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Category)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Poster)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NumOfOrders)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OnSale)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MinAge)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category)
            </td>
            <td>

                <img src="@Html.DisplayFor(modelItem => item.Poster)" alt="movie poster" style="width:50px;height:50px;" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumOfOrders)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OnSale)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MinAge)
            </td>
            <td>
                @Html.ActionLink("Remove", "RemoveMovie", new { id = item.Id }) |
                @*Html.ActionLink("Add to Screenings", "AddMoviesToScreenings", new { id = item.Id })*@ 
                @Html.ActionLink("Change Price", "ChangePrice", new { id = item.Id })
            </td>
        </tr>
    }

</table>
